    <!-- Student Modal -->
    <div class="modal" id="studentModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="studentModalTitle">Add Student</h2>
                <button class="close-button" onclick="closeModal('studentModal')">&times;</button>
            </div>
            <form id="studentForm" onsubmit="saveStudent(event)">
                <input type="hidden" id="studentId">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="studentName">Full Name *</label>
                        <input type="text" id="studentName" required>
                    </div>

                    <div class="form-group">
                        <label for="studentEmail">Email *</label>
                        <input type="email" id="studentEmail" required>
                    </div>

                    <div class="form-group full-width">
                        <label for="studentCourses">Enroll in Courses *</label>
                        <select id="studentCourses" multiple size="4" required>
                            <!-- Courses will be populated by JavaScript -->
                        </select>
                        <small style="color: #888; margin-top: 0.5rem; display: block;">Hold Ctrl/Cmd to select multiple courses</small>
                    </div>

                    <div class="form-group">
                        <label for="studentStatus">Status *</label>
                        <select id="studentStatus" required>
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="secondary-button" onclick="closeModal('studentModal')">Cancel</button>
                    <button type="submit" class="primary-button">Save Student</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Test Modal -->
    <div class="modal" id="testModal">
        <div class="modal-content" style="max-width: 800px;">
            <div class="modal-header">
                <h2 id="testModalTitle">Create Test</h2>
                <button class="close-button" onclick="closeModal('testModal')">&times;</button>
            </div>
            <form id="testForm" onsubmit="saveTest(event)">
                <input type="hidden" id="testId">
                <div class="form-grid">
                    <div class="form-group full-width">
                        <label for="testTitle">Test Title *</label>
                        <input type="text" id="testTitle" required>
                    </div>

                    <div class="form-group full-width">
                        <label for="testDescription">Description</label>
                        <textarea id="testDescription" rows="2"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="testCourse">Course *</label>
                        <select id="testCourse" required>
                            <option value="">Select Course</option>
                            <!-- Courses will be populated by JavaScript -->
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="testType">Test Type *</label>
                        <select id="testType" required onchange="handleTestTypeChange()">
                            <option value="">Select Type</option>
                            <option value="quiz">Quiz</option>
                            <option value="exam">Exam</option>
                            <option value="assignment">Assignment</option>
                            <option value="coding">Coding Challenge</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="testDuration">Duration (minutes) *</label>
                        <input type="number" id="testDuration" min="1" required>
                    </div>

                    <div class="form-group">
                        <label for="testPassingScore">Passing Score (%) *</label>
                        <input type="number" id="testPassingScore" min="0" max="100" required>
                    </div>

                    <div class="form-group full-width" id="regularQuestionsSection">
                        <label for="testQuestions">Number of Questions *</label>
                        <input type="number" id="testQuestions" min="1">
                    </div>

                    <!-- Coding Challenge Section -->
                    <div class="form-group full-width" id="codingChallengeSection" style="display: none;">
                        <label>Coding Challenge Details</label>
                        <div style="background: #1a1a1a; padding: 1rem; border-radius: 10px; margin-top: 0.5rem;">
                            <div class="form-group">
                                <label for="codingProblem">Problem Statement *</label>
                                <textarea id="codingProblem" rows="4" placeholder="Describe the coding problem..."></textarea>
                            </div>

                            <div class="form-group">
                                <label for="codingLanguage">Programming Language *</label>
                                <select id="codingLanguage">
                                    <option value="javascript">JavaScript</option>
                                    <option value="python">Python</option>
                                    <option value="java">Java</option>
                                    <option value="cpp">C++</option>
                                    <option value="csharp">C#</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="codingStarterCode">Starter Code</label>
                                <textarea id="codingStarterCode" rows="4" placeholder="function solution() {&#10;  // Your code here&#10;}"></textarea>
                            </div>

                            <div class="form-group">
                                <label>Test Cases</label>
                                <div id="testCasesList">
                                    <!-- Test cases will be added here -->
                                </div>
                                <button type="button" class="secondary-button" onclick="addTestCase()" style="margin-top: 0.5rem;">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <line x1="12" y1="5" x2="12" y2="19"></line>
                                        <line x1="5" y1="12" x2="19" y2="12"></line>
                                    </svg>
                                    Add Test Case
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="testStatus">Status *</label>
                        <select id="testStatus" required>
                            <option value="draft">Draft</option>
                            <option value="active">Active</option>
                            <option value="closed">Closed</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="secondary-button" onclick="closeModal('testModal')">Cancel</button>
                    <button type="submit" class="primary-button">Save Test</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Schedule Modal -->
    <div class="modal" id="scheduleModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Schedule Course Session</h2>
                <button class="close-button" onclick="closeModal('scheduleModal')">&times;</button>
            </div>
            <form id="scheduleForm" onsubmit="saveSchedule(event)">
                <input type="hidden" id="scheduleId">
                <div class="form-grid">
                    <div class="form-group full-width">
                        <label for="scheduleCourse">Course *</label>
                        <select id="scheduleCourse" required>
                            <option value="">Select Course</option>
                            <!-- Courses will be populated by JavaScript -->
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="scheduleDate">Date *</label>
                        <input type="date" id="scheduleDate" required>
                    </div>

                    <div class="form-group">
                        <label for="scheduleTime">Time *</label>
                        <input type="time" id="scheduleTime" required>
                    </div>

                    <div class="form-group">
                        <label for="scheduleDuration">Duration (hours) *</label>
                        <input type="number" id="scheduleDuration" min="0.5" step="0.5" required>
                    </div>

                    <div class="form-group full-width">
                        <label for="scheduleStudents">Students *</label>
                        <select id="scheduleStudents" multiple size="5" required>
                            <!-- Students will be populated by JavaScript -->
                        </select>
                        <small style="color: #888; margin-top: 0.5rem; display: block;">Hold Ctrl/Cmd to select multiple students</small>
                    </div>

                    <div class="form-group full-width">
                        <label for="scheduleNotes">Notes</label>
                        <textarea id="scheduleNotes" rows="3"></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="secondary-button" onclick="closeModal('scheduleModal')">Cancel</button>
                    <button type="submit" class="primary-button">Schedule Session</button>
                </div>
            </form>
        </div>
    </div> *@

