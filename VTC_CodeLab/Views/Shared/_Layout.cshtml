@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VTC_CodeLab</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VTC_CodeLab.styles.css" asp-append-version="true" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VTCodeLab - Learn. Code. Excel.</title>
    <meta name="description" content="VTCodeLab - Premier coding education platform for students. Learn programming, take tests, and build your future in tech.">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Dancing+Script:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
</head>

<body>

    @using Microsoft.AspNetCore.Identity
    @inject SignInManager<VTC_CodeLab.Models.ApplicationUser> SignInManager
    @inject UserManager<VTC_CodeLab.Models.ApplicationUser> UserManager

    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="#home">VTCodeLab</a>
            </div>
            <div class="nav-menu" id="nav-menu">
                <a asp-area="Home" asp-action="index" asp-controller="Home"  class="nav-link">Home</a>
                <a asp-area="Home" asp-action="index" asp-controller="AboutUs" class="nav-link">About</a>
                <a asp-area="Home"  class="nav-link">Courses</a>
                <a asp-area="Home"  asp-action="index" asp-controller="ContactUs" class="nav-link">Contact</a>

                @if (SignInManager.IsSignedIn(User))
                {
                    <span class="nav-link">
                        Hello, @(UserManager.GetUserAsync(User).Result?.FullName ?? UserManager.GetUserName(User))
                    </span>
                    <form method="post" asp-area="Identity" asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Action("Index", "Home")"
                          style="display:inline;">
                        <button type="submit" class="nav-link btn btn-link" style="border:none; background:none; padding:0;">
                            Logout
                        </button>
                    </form>
                }
                else
                {
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Sign In</a>
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
                }
            </div>
            <div class="hamburger" id="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    <footer class="footerr">
        <div class="container-fluid">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>VTCodeLab</h3>
                    <p>Empowering students to build successful careers in technology through comprehensive coding education.</p>
                    <div class="newsletter">
                        <h4>Stay Updated</h4>
                        <form class="newsletter-form">
                            <input type="email" placeholder="Enter your email" required>
                            <button type="submit">Subscribe</button>
                        </form>
                    </div>
                </div>
                <div class="footer-section">
                    <h4>Courses</h4>
                    <ul>
                        <li><a href="#courses">Web Development</a></li>
                        <li><a href="#courses">Python Programming</a></li>
                        <li><a href="#courses">Mobile Development</a></li>
                        <li><a href="#courses">Database Management</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Resources</h4>
                    <ul>
                        <li><a href="#blog">Blog</a></li>
                        <li><a href="#projects">Student Projects</a></li>
                        <li><a href="#testimonials">Success Stories</a></li>
                        <li><a href="#">Practice Tests</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Support</h4>
                    <ul>
                        <li><a href="#contact">Contact Us</a></li>
                        <li><a href="#">Help Center</a></li>
                        <li><a href="#">Community Forum</a></li>
                        <li><a href="#">Student Support</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 VTCodeLab. All rights reserved.</p>
                <div class="footer-links">
                    <a href="#">Privacy Policy</a>
                    <a href="#">Terms of Service</a>
                    <a href="#">Cookie Policy</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/js/script.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
