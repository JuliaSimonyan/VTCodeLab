@{
    ViewData["Title"] = "Home Page";
}

<body>
    

    <!-- Hero Section -->
    <section id="home" class="hero">
        <div class="hero-container">
            <div class="hero-content">
                <!-- Updated hero to match Frame template with large title and subtitle -->
                <h1 class="hero-title">
                    VTCodeLab
                </h1>
                <p class="hero-tagline">
                    A coding platform crafting <span class="italic-text rotating-text" id="rotating-text">excellence</span>
                </p>
            </div>
        </div>

        <!-- Added two large images section to match template -->
        <div class="hero-images">
            <div class="hero-image-left">
                <img src="~/Images/photo_2025-09-11_11-18-09.jpg" alt="Coding Concept">
            </div>
            <div class="hero-image-right">
                <img src="~/Images/photo_2025-09-11_11-18-12.jpg" alt="Student Learning">
            </div>
        </div>
    </section>

    <!-- Logo Carousel -->
    <section class="logo-carousel">
        <div class="carousel-track">
            <div class="logo-item">Python</div>
            <div class="logo-item">JavaScript</div>
            <div class="logo-item">React</div>
            <div class="logo-item">Node.js</div>
            <div class="logo-item">HTML/CSS</div>
            <div class="logo-item">Java</div>
            <div class="logo-item">C++</div>
            <div class="logo-item">SQL</div>
            <div class="logo-item">Git</div>
            <div class="logo-item">Python</div>
            <div class="logo-item">JavaScript</div>
            <div class="logo-item">React</div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="about">
        <div class="container">
            <div class="about-content">
                <div class="about-text">
                    <h2>Empowering the Next Generation of Developers</h2>
                    <p>
                        VTCodeLab is a comprehensive learning platform designed specifically for students
                        who want to master programming and build successful careers in technology. Our
                        structured curriculum, hands-on projects, and assessment tools provide everything
                        you need to excel.
                    </p>
                    <div class="stats">
                        <div class="stat-item">
                            <span class="stat-number">10,000+</span>
                            <span class="stat-label">Students Enrolled</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">50+</span>
                            <span class="stat-label">Courses Available</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">95%</span>
                            <span class="stat-label">Success Rate</span>
                        </div>
                    </div>
                </div>
                <div class="about-image">
                    <img src="~/Images/photo_2025-09-11_11-18-14.jpg" alt="Students learning to code">
                </div>
            </div>
        </div>
    </section>

    <!-- Courses Section -->
    <section id="courses" class="courses">
        <div class="container">
            <h2 class="section-title">Our Learning Paths</h2>
            <div class="courses-grid">
                <div class="course-card">
                    <div class="course-image">
                        <img src="~/Images/photo_2025-09-11_11-18-15.jpg" alt="Web Development">
                    </div>
                    <div class="course-content">
                        <h3>Web Development</h3>
                        <p>Master HTML, CSS, JavaScript, and modern frameworks like React and Node.js</p>
                        <div class="course-meta">
                            <span class="duration">12 weeks</span>
                            <span class="level">Beginner to Advanced</span>
                        </div>
                    </div>
                </div>
                <div class="course-card">
                    <div class="course-image">
                        <img src="~/Images/photo_2025-09-11_11-18-16.jpg" alt="Python Programming">
                    </div>
                    <div class="course-content">
                        <h3>Python Programming</h3>
                        <p>Learn Python from basics to advanced topics including data science and AI</p>
                        <div class="course-meta">
                            <span class="duration">10 weeks</span>
                            <span class="level">All Levels</span>
                        </div>
                    </div>
                </div>
                <div class="course-card">
                    <div class="course-image">
                        <img src="~/Images/photo_2025-09-11_11-18-09.jpg" alt="Mobile Development">
                    </div>
                    <div class="course-content">
                        <h3>Mobile Development</h3>
                        <p>Build iOS and Android apps using React Native and Flutter</p>
                        <div class="course-meta">
                            <span class="duration">14 weeks</span>
                            <span class="level">Intermediate</span>
                        </div>
                    </div>
                </div>
                <div class="course-card">
                    <div class="course-image">
                        <img src="~/Images/photo_2025-09-11_11-18-12.jpg" alt="Database Management">
                    </div>
                    <div class="course-content">
                        <h3>Database Management</h3>
                        <p>Master SQL, database design, and modern database technologies</p>
                        <div class="course-meta">
                            <span class="duration">8 weeks</span>
                            <span class="level">Beginner to Intermediate</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="projects">
        <div class="container">
            <h2 class="section-title">Student Projects</h2>
            <div class="projects-grid">
                <div class="project-card">
                    <img src="~/Images/p1.png" alt="E-commerce Platform">
                    <div class="project-overlay">
                        <h3>E-commerce Platform</h3>
                        <p>Full-stack web application with React and Node.js</p>
                    </div>
                </div>
                <div class="project-card">
                    <img src="~/Images/p2.png" alt="Task Management App">
                    <div class="project-overlay">
                        <h3>Task Management App</h3>
                        <p>Cross-platform mobile app built with React Native</p>
                    </div>
                </div>
                <div class="project-card">
                    <img src="~/Images/p3.png" alt="Data Analytics Dashboard">
                    <div class="project-overlay">
                        <h3>Analytics Dashboard</h3>
                        <p>Data visualization tool using Python and D3.js</p>
                    </div>
                </div>
                <!-- <div class="project-card">
                    <img src="Images/p1.png" alt="AI Chatbot">
                    <div class="project-overlay">
                        <h3>AI Chatbot</h3>
                        <p>Intelligent chatbot using machine learning</p>
                    </div>
                </div> -->
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section id="testimonials" class="testimonials">
        <div class="container">
            <h2 class="section-title">What Our Students Say</h2>
            <div class="testimonials-marquee">
                <div class="marquee-track">
                    <div class="testimonial-card">
                        <p>"VTCodeLab transformed my coding journey. The structured approach and hands-on projects helped me land my dream job at Google."</p>
                        <div class="testimonial-author">
                            <strong>Sarah Chen</strong>
                            <span>Software Engineer at Google</span>
                        </div>
                    </div>
                    <div class="testimonial-card">
                        <p>"The testing system helped me track my progress and identify areas for improvement. Now I'm confident in my coding abilities."</p>
                        <div class="testimonial-author">
                            <strong>Marcus Johnson</strong>
                            <span>Full-Stack Developer</span>
                        </div>
                    </div>
                    <div class="testimonial-card">
                        <p>"Best investment I made for my career. The instructors are amazing and the community is incredibly supportive."</p>
                        <div class="testimonial-author">
                            <strong>Emily Rodriguez</strong>
                            <span>Frontend Developer at Meta</span>
                        </div>
                    </div>
                    <div class="testimonial-card">
                        <p>"From zero coding experience to building full-stack applications in just 6 months. VTCodeLab made it possible."</p>
                        <div class="testimonial-author">
                            <strong>David Kim</strong>
                            <span>Junior Developer at Spotify</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Blog Section -->
    <section id="blog" class="blog">
        <div class="container">
            <h2 class="section-title">Latest from Our Blog</h2>
            <div class="blog-grid">
                <article class="blog-card">
                    <img src="~/Images/photo_2025-09-11_11-25-34.jpg" alt="Coding Best Practices">
                    <div class="blog-content">
                        <span class="blog-category">Tutorial</span>
                        <h3>10 Coding Best Practices Every Student Should Know</h3>
                        <p>Essential coding practices that will make you a better programmer from day one.</p>
                        <div class="blog-meta">
                            <span>Dec 15, 2024</span>
                            <span>5 min read</span>
                        </div>
                    </div>
                </article>
                <article class="blog-card">
                    <img src="~/Images/photo_2025-09-11_11-25-35.jpg" alt="Tech Career Guide">
                    <div class="blog-content">
                        <span class="blog-category">Career</span>
                        <h3>How to Land Your First Tech Job as a Student</h3>
                        <p>Complete guide to preparing for and securing your first position in tech.</p>
                        <div class="blog-meta">
                            <span>Dec 12, 2024</span>
                            <span>8 min read</span>
                        </div>
                    </div>
                </article>
                <article class="blog-card">
                    <img src="~/Images/photo_2025-09-11_11-25-36.jpg" alt="JavaScript Frameworks">
                    <div class="blog-content">
                        <span class="blog-category">Technology</span>
                        <h3>React vs Vue vs Angular: Which to Learn First?</h3>
                        <p>Comprehensive comparison of popular JavaScript frameworks for beginners.</p>
                        <div class="blog-meta">
                            <span>Dec 10, 2024</span>
                            <span>6 min read</span>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </section>


</body>
</html>
