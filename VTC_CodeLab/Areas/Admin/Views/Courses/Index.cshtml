@model IEnumerable<VTC_CodeLab.Models.Course>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Manage Courses";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/css/teacher-styles.css">


<div class="page-content" id="available-courses-page">
    <div class="page-header">
        <div>
            <h1>Available Courses</h1>
        </div>
        <button class="primary-button">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            <a asp-action="Add" class="btn btn-green" style="text-decoration:none; color:white"> Add Course</a>
        </button>
    </div>
   

   
    @if (!Model.Any())
    {
        <p>No courses found.</p>
    }
    else
    {
        <div class="courses-grid-view" id="availableCoursesList">

        @foreach (var course in Model)
        {
            <div class="course-card-teacher">
                <div class="course-card-image">🎓</div>
                <div class="course-card-content">
                    <div class="course-card-header">
                        <div>
                            <h3>@course.Title</h3>
                        </div>
                    </div>
                    <p style="color: #888; font-size: 0.9rem; margin-bottom: 1rem;">@course.Description</p>
                    <div class="course-card-meta">
                        <span>📊@course.Credits</span>
                    </div>
                    <div class="course-card-footer">
                      
                            <a class="primary-button" style="padding: 0.5rem 1rem; font-size: 0.875rem; text-decoration:none;" asp-area="Admin" asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id">Edit</a>

                            <form asp-action="Delete" method="post" asp-route-id="@course.Id" class="vtcodelab-delete-form">
                                <input type="hidden" name="roleId" value="@course.Id" />

                                <button type="submit" class="vtcodelab-btn vtcodelab-btn-danger" onclick="return confirm('Are you sure you want to delete this role?');">
                                    <svg class="vtcodelab-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                    Delete
                                </button>
                                </form>
                           
                    </div>
                </div>
            </div>
        }
        </div>
    }
</div>

    