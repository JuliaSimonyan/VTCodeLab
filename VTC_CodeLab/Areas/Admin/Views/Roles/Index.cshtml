@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Role Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - VTCodeLab</title>
    <link rel="stylesheet" href="~/css/vtcodelab-admin.css">
</head>
<body>
    <div class="vtcodelab-admin-container">
        <div class="vtcodelab-admin-content">
            <!-- Page Header -->
            <div class="vtcodelab-page-header">
                <div class="vtcodelab-page-title-section">
                    <h1 class="vtcodelab-page-title">Manage Roles in VTCodeLab</h1>
                    <p class="vtcodelab-page-subtitle">Manage user roles and permissions</p>
                </div>

                <!-- Add Role Form -->
                <form asp-action="Add" method="post" class="vtcodelab-inline-form">
                    <input type="text"
                           name="roleName"
                           placeholder="Enter role name"
                           required
                           class="vtcodelab-input-inline" />
                    <button type="submit" class="vtcodelab-btn vtcodelab-btn-primary">
                        <svg class="vtcodelab-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        Add Role
                    </button>
                </form>
            </div>

            <!-- Roles Table -->
            <div class="vtcodelab-table-container">
                <table class="vtcodelab-table">
                    <thead>
                        <tr>
                            <th>Role Name</th>
                            <th class="vtcodelab-table-actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="vtcodelab-role-cell">
                                            <div class="vtcodelab-role-badge">
                                                @role.Name?.Substring(0, 1).ToUpper()
                                            </div>
                                            <span class="vtcodelab-role-name">@role.Name</span>
                                        </div>
                                    </td>
                                    <td class="vtcodelab-table-actions">
                                        <form asp-action="Delete" method="post" asp-route-id="@role.Id" class="vtcodelab-delete-form">
                                            <input type="hidden" name="roleId" value="@role.Id" />

                                            <button type="submit" class="vtcodelab-btn vtcodelab-btn-danger" onclick="return confirm('Are you sure you want to delete this role?');">
                                                <svg class="vtcodelab-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="vtcodelab-empty-state">
                                    <div class="vtcodelab-empty-content">
                                        <svg class="vtcodelab-empty-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                                        </svg>
                                        <p>No roles found</p>
                                        <span>Add your first role using the form above</span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
