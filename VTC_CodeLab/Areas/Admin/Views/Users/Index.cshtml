@model List<VTC_CodeLab.Models.ViewModels.Users.UserViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // ✅ reuse dashboard layout
}
<link rel="stylesheet" href="~/css/vtcodelab-admin.css">


<div class="page-content active" id="users-page">
    <div class="page-header">
        <div>
            <h1>User Management</h1>
            <p>Manage teachers and students</p>
        </div>
        <form method="post" asp-action="Add" asp-controller="Users" asp-area="Admin">
        <a class="primary-button" asp-area="Admin" asp-controller="Users" asp-action="Add">
            + Add User
        </a>
        </form>
    </div>

    <div class="data-table">
        <table>
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Email Confirmed</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id">Edit</a> |
                            <form asp-action="Delete" method="post" asp-route-id="@user.Id" class="vtcodelab-delete-form">
                                <input type="hidden" name="roleId" value="@user.Id" />

                                <button type="submit" class="vtcodelab-btn vtcodelab-btn-danger" onclick="return confirm('Are you sure you want to delete this role?');">
                                    <svg class="vtcodelab-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
