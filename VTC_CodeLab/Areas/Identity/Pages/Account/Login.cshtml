@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - VTCodeLab</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Dancing+Script:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/vtcodelab-auth.css">
</head>


<div class="vtcodelab-auth-container">
    <div class="vtcodelab-auth-wrapper">
        <!-- Header -->
        <div class="vtcodelab-auth-header">
            <a href="/" class="vtcodelab-logo">VTCodeLab</a>
            <h1 class="vtcodelab-auth-title">Welcome Back</h1>
            <p class="vtcodelab-auth-subtitle">Sign in to continue your coding journey</p>
        </div>

        <div class="vtcodelab-auth-content">
            <!-- Main Login Form -->
            <div class="vtcodelab-auth-main">
                <form id="account" method="post" class="vtcodelab-form">
                    <div asp-validation-summary="ModelOnly" class="vtcodelab-error-summary" role="alert"></div>
                    
                    <div class="vtcodelab-form-group">
                        <label asp-for="Input.Email" class="vtcodelab-label">Email Address</label>
                        <input asp-for="Input.Email" class="vtcodelab-input" autocomplete="username" aria-required="true" placeholder="Enter your email" />
                        <span asp-validation-for="Input.Email" class="vtcodelab-error"></span>
                    </div>

                    <div class="vtcodelab-form-group">
                        <label asp-for="Input.Password" class="vtcodelab-label">Password</label>
                        <input asp-for="Input.Password" class="vtcodelab-input" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                        <span asp-validation-for="Input.Password" class="vtcodelab-error"></span>
                    </div>

                    <div class="vtcodelab-checkbox-group">
                        <label asp-for="Input.RememberMe" class="vtcodelab-checkbox-label">
                            <input class="vtcodelab-checkbox" asp-for="Input.RememberMe" />
                            <span class="vtcodelab-checkbox-custom"></span>
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <button id="login-submit" type="submit" class="vtcodelab-btn vtcodelab-btn-primary">
                        Sign In
                    </button>

                    <div class="vtcodelab-auth-links">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="vtcodelab-link">Forgot your password?</a>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="vtcodelab-link">Create new account</a>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="vtcodelab-link">Resend email confirmation</a>
                    </div>
                </form>
            </div>

            <!-- External Login Section -->
            <div class="vtcodelab-auth-external">
               

                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div class="vtcodelab-external-notice">
                            <p>External authentication services are not configured.</p>
                            <a href="https://go.microsoft.com/fwlink/?LinkID=532715" class="vtcodelab-link" target="_blank">
                                Learn how to set up external providers
                            </a>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-area="Identity" asp-route-page="/Account/ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="vtcodelab-external-buttons">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="vtcodelab-btn vtcodelab-btn-external" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                        @if (provider.Name == "Google")
                                        {
                                            <svg class="vtcodelab-external-icon" viewBox="0 0 24 24">
                                                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                                            </svg>
                                        }
                                        @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    }
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
