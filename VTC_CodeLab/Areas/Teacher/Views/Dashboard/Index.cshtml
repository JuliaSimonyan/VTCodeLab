@{
    Layout = "~/Views/Shared/TeacherLayout.cshtml";
    var title = ViewData["Title"] ?? "Teacher Dashboard";
}
<main class="teacher-main">
    <!-- Header -->
    <header class="teacher-header">
        <button class="menu-toggle" id="menuToggle">
            <span></span>
            <span></span>
            <span></span>
        </button>

        <div class="header-search">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input type="text" placeholder="Search courses, students, tests...">
        </div>

        <div class="header-actions">
            <button class="icon-button">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                    <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                </svg>
            </button>

            <div class="user-menu">
                <img src="/placeholder.svg?height=32&width=32" alt="Teacher">
                <span>Prof. Smith</span>
            </div>
        </div>
    </header>

    <!-- Dashboard Page -->
    <div class="page-content active" id="dashboard-page">
        <div class="page-header">
            <div>
                <h1>Welcome back, Prof. Smith!</h1>
                <p>Here's what's happening with your courses today.</p>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon purple">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                        <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
                    </svg>
                </div>
                <div class="stat-content">
                    <h3>Active Courses</h3>
                    <span class="stat-number" id="activeCourses">@ViewData["CourseCount"]</span>
                    <span class="stat-change positive">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="18 15 12 9 6 15"></polyline>
                        </svg>
                        2 new this month
                    </span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon blue">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                </div>
                <div class="stat-content">
                    <h3>Total Students</h3>
                    <span class="stat-number" id="totalStudents">0</span>
                    <span class="stat-change positive">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="18 15 12 9 6 15"></polyline>
                        </svg>
                        12 new enrollments
                    </span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon green">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14 2 14 8 20 8"></polyline>
                    </svg>
                </div>
                <div class="stat-content">
                    <h3>Active Tests</h3>
                    <span class="stat-number" id="activeTests">0</span>
                    <span class="stat-change positive">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="18 15 12 9 6 15"></polyline>
                        </svg>
                        3 pending reviews
                    </span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon orange">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                </div>
                <div class="stat-content">
                    <h3>Upcoming Classes</h3>
                    <span class="stat-number" id="upcomingClasses">0</span>
                    <span class="stat-change">Next in 2 hours</span>
                </div>
            </div>
        </div>

        <!-- Dashboard Grid -->
        <div class="dashboard-grid">
            <div class="dashboard-card">
                <div class="card-header">
                    <h3>Recent Activity</h3>
                    <button class="text-button">View All</button>
                </div>
                <div class="activity-list" id="activityList">
                    <!-- Activity items will be populated by JavaScript -->
                </div>
            </div>

            <div class="dashboard-card">
                <div class="card-header">
                    <h3>Quick Actions</h3>
                </div>
                <div class="quick-actions">
                    <button class="action-button purple" onclick="showModal('courseModal')">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="12" y1="5" x2="12" y2="19"></line>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                        <span>Add New Course</span>
                    </button>

                    <button class="action-button blue" onclick="showModal('studentModal')">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="8.5" cy="7" r="4"></circle>
                            <line x1="20" y1="8" x2="20" y2="14"></line>
                            <line x1="23" y1="11" x2="17" y2="11"></line>
                        </svg>
                        <span>Add Student</span>
                    </button>

                    <button class="action-button green" onclick="showModal('testModal')">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                            <polyline points="14 2 14 8 20 8"></polyline>
                        </svg>
                        <span>Create Test</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- My Courses Page -->
    <div class="page-content" id="my-courses-page">
        <div class="page-header">
            <div>
                <h1>My Courses</h1>
                <p>Manage your active courses and content</p>
            </div>
            <button class="primary-button" onclick="showModal('courseModal')">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Add Course
            </button>
        </div>

        <div class="filters-bar">
            <div class="search-box">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                </svg>
                <input type="text" id="courseSearch" placeholder="Search courses...">
            </div>
            <select class="filter-select" id="courseStatusFilter">
                <option value="all">All Status</option>
                <option value="active">Active</option>
                <option value="draft">Draft</option>
                <option value="completed">Completed</option>
            </select>
        </div>

        <div class="courses-grid-view" id="myCoursesList">
            <!-- Courses will be populated by JavaScript -->
        </div>
    </div>

    <!-- Available Courses Page -->
    <div class="page-content" id="available-courses-page">
        <div class="page-header">
            <div>
                <h1>Available Courses</h1>
                <p>Browse and join available courses</p>
            </div>
        </div>

        <div class="filters-bar">
            <div class="search-box">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                </svg>
                <input type="text" id="availableCourseSearch" placeholder="Search available courses...">
            </div>
            <select class="filter-select" id="categoryFilter">
                <option value="all">All Categories</option>
                <option value="programming">Programming</option>
                <option value="design">Design</option>
                <option value="business">Business</option>
            </select>
        </div>

        <div class="courses-grid-view" id="availableCoursesList">
            <!-- Available courses will be populated by JavaScript -->
        </div>
    </div>

    <!-- Students Page -->
    <div class="page-content" id="students-page">
        <div class="page-header">
            <div>
                <h1>My Students</h1>
                <p>Manage students enrolled in your courses</p>
            </div>
            <button class="primary-button" onclick="showModal('studentModal')">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Add Student
            </button>
        </div>

        <div class="filters-bar">
            <div class="search-box">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                </svg>
                <input type="text" id="studentSearch" placeholder="Search students...">
            </div>
            <select class="filter-select" id="studentCourseFilter">
                <option value="all">All Courses</option>
            </select>
        </div>

        <div class="data-table">
            <table>
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <th>Email</th>
                        <th>Enrolled Courses</th>
                        <th>Progress</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="studentsList">
                    <!-- Students will be populated by JavaScript -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Tests Page -->
    <div class="page-content" id="tests-page">
        <div class="page-header">
            <div>
                <h1>Tests & Assignments</h1>
                <p>Create and manage tests for your courses</p>
            </div>
            <button class="primary-button" onclick="showModal('testModal')">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Create Test
            </button>
        </div>

        <div class="filters-bar">
            <div class="search-box">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                </svg>
                <input type="text" id="testSearch" placeholder="Search tests...">
            </div>
            <select class="filter-select" id="testCourseFilter">
                <option value="all">All Courses</option>
            </select>
            <select class="filter-select" id="testTypeFilter">
                <option value="all">All Types</option>
                <option value="quiz">Quiz</option>
                <option value="exam">Exam</option>
                <option value="assignment">Assignment</option>
                <option value="coding">Coding Challenge</option>
            </select>
        </div>

        <div class="data-table">
            <table>
                <thead>
                    <tr>
                        <th>Test Name</th>
                        <th>Course</th>
                        <th>Type</th>
                        <th>Questions</th>
                        <th>Duration</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="testsList">
                    <!-- Tests will be populated by JavaScript -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Schedule Page -->
    <div class="page-content" id="schedule-page">
        <div class="page-header">
            <div>
                <h1>Course Schedule</h1>
                <p>Schedule and manage course sessions</p>
            </div>
            <button class="primary-button" onclick="showModal('scheduleModal')">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Schedule Session
            </button>
        </div>

        <div class="schedule-calendar" id="scheduleCalendar">
            <!-- Schedule will be populated by JavaScript -->
        </div>
    </div>
</main>